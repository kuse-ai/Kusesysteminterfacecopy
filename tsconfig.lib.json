{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": false,
    "incremental": false,
    "tsBuildInfoFile": null
  },
  "include": [
    "src/lib/**/*",
    "src/components/**/*",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/App.tsx",
    "src/main.tsx"
  ]
}